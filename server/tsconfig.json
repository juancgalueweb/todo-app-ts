{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "dist/js",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "custom.d.ts", ".eslintrc.js"],
  "exclude": ["src/types/*.ts", "node_modules"]
}
